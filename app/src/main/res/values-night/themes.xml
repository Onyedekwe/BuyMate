    <style name="TimePickerTheme">
        <item name="android:windowBackground">?attr/color</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:colorAccent">?attr/colorPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:colorControlActivated">?attr/colorPrimary</item>
        <item name="android:windowElevation">100dp</item>
    </style>

    <style name="DialogAnimations">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
