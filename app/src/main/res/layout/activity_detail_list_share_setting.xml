<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    android:orientation="vertical"
    tools:context=".DetailListShareSettingActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/swipeToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/backgroundColor"
        android:elevation="1dp"
        app:navigationIcon="@drawable/final_regular_back_icon"
        app:title="Detailed list sharing"
        app:titleTextColor="?attr/textFillColor" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/shareWithPriceLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/backgroundColor"
        android:padding="15dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/shareWithPriceTextHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share with price"
                android:textColor="?attr/textFillColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/shareWithPriceSubTextHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Include item prices while sharing"
                android:textColor="?attr/itemTextAppearanceInactive"
                android:textSize="15sp" />

        </LinearLayout>


        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/disable_share_with_price_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:background="?attr/trackColor"
        android:orientation="vertical" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/shareWithQuantityLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/backgroundColor"
        android:padding="15dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/shareWithQuantityTextHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share with quantity"
                android:textColor="?attr/textFillColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/shareWithQuantitySubTextHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Include item quantities while sharing"
                android:textColor="?attr/itemTextAppearanceInactive"
                android:textSize="15dp" />

        </LinearLayout>


        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/disable_share_with_quantity_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:background="?attr/trackColor"
        android:orientation="vertical" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/shareWithTotalLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/backgroundColor"
        android:padding="15dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/shareWithTotalTextHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share with total"
                android:textColor="?attr/textFillColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/shareWithTotalSubTextHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Include list total while sharing"
                android:textColor="?attr/itemTextAppearanceInactive"
                android:textSize="15sp" />

        </LinearLayout>


        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/disable_share_with_total_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>